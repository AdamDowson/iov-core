{
  "name": "@iov/crypto",
  "version": "0.0.0",
  "description": "Cryptography resources for IOV projects",
  "author": "simon <webmaster128@users.noreply.github.com>",
  "license": "AGPL-3.0",
  "main": "build/src/index.js",
  "types": "types/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/iov-one/web4/tree/master/packages/iov-crypto"
  },
  "scripts": {
    "update-type-declarations": "tsc --declaration --outDir types --emitDeclarationOnly",
    "lint": "tslint -t verbose --project .",
    "format": "prettier --write **/*.ts",
    "test-node": "./jasmine-testrunner.js",
    "test-firefox": "yarn build-browser && karma start --single-run --browsers Firefox",
    "test-chrome": "yarn build-browser && karma start --single-run --browsers ChromeHeadless",
    "test-safari": "yarn build-browser && karma start --single-run --browsers Safari",
    "test": "yarn build && yarn test-node",
    "prebuild": "yarn lint && yarn format",
    "build": "yarn update-type-declarations && tsc",
    "build-browser": "yarn build && webpack --mode development"
  },
  "dependencies": {
    "bn.js": "^4.11.8",
    "elliptic": "^6.4.0",
    "libsodium-wrappers": "^0.7.3",
    "sha.js": "^2.4.11"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.8",
    "jasmine": "^3.1.0",
    "jasmine-console-reporter": "^3.0.2",
    "jasmine2-custom-message": "^0.9.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.2",
    "karma-safari-launcher": "^1.0.0",
    "tslint": "^5.10.0",
    "webpack-command": "^0.2.1"
  }
}
