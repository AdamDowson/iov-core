{
  "name": "@iov/ledger-bns",
  "version": "0.0.0",
  "description": "Integration of ledger-bns application",
  "author": "Ethan Frey <ethanfrey@users.noreply.github.com>",
  "license": "AGPL-3.0",
  "main": "build/index.js",
  "types": "types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/iov-one/web4/tree/master/packages/ledger-bns"
  },
  "scripts": {
    "lint": "tslint -t verbose --project .",
    "format": "prettier --write './src/**/*.ts'",
    "test-node": "./jasmine-testrunner.js",
    "test": "yarn build && yarn test-node",
    "prebuild": "yarn format && yarn lint",
    "build": "tsc --declaration && rm ./types/* && mv build/*.d.ts ./types",
    "xxx-test-firefox": "yarn build-browser && karma start --single-run --browsers Firefox",
    "xxx-test-chrome": "yarn build-browser && karma start --single-run --browsers ChromeHeadless",
    "xxx-test-safari": "yarn build-browser && karma start --single-run --browsers Safari",
    "xxx-build-browser": "yarn build && webpack --mode development"
  },
  "dependencies": {
    "@iov/crypto": "^0.0.0",
    "@ledgerhq/hw-app-eth": "^4.15.0",
    "@ledgerhq/hw-transport-node-hid": "^4.16.0",
    "@types/node-hid": "^0.7.0"
  }
}
