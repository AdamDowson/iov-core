{
  "name": "@iov/keycontrol",
  "version": "0.0.0",
  "description": "Keyrings and Keycontroller for safe cryptography",
  "author": "ethanfrey <ethanfrey@users.noreply.github.com>",
  "license": "AGPL-3.0",
  "main": "build/index.js",
  "types": "types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/iov-one/web4/tree/master/packages/iov-keycontrol"
  },
  "scripts": {
    "format": "prettier --write --loglevel warn './src/**/*.ts'",
    "lint": "tslint -t verbose --project .",
    "lint-fix": "yarn lint --fix",
    "test-node": "./jasmine-testrunner.js",
    "test-firefox": "yarn build-browser && karma start --single-run --browsers Firefox",
    "test-chrome": "yarn build-browser && karma start --single-run --browsers ChromeHeadless",
    "test-safari": "yarn build-browser && karma start --single-run --browsers Safari",
    "test": "yarn build-or-skip && yarn test-node",
    "prebuild": "yarn format && yarn lint",
    "preprocess-types": "rm -r ./types/*",
    "postprocess-types": "rm ./types/*.spec.d.ts ./types/**/*.spec.d.ts",
    "build": "yarn preprocess-types && tsc --declarationDir ./types && yarn postprocess-types",
    "build-or-skip": "[ -n \"$SKIP_BUILD\" ] || yarn build",
    "build-browser": "yarn build-or-skip && webpack --mode development"
  },
  "dependencies": {
    "@iov/crypto": "^0.0.0",
    "@iov/encoding": "^0.0.0",
    "@iov/types": "^0.0.0",
    "@types/node": "^9.6.6",
    "leveldown": "^4.0.1",
    "levelup": "^3.1.0",
    "long": "^4.0.0",
    "readonly-date": "^0.0.0",
    "xstream": "^11.4.0"
  }
}
