{
  "name": "@iov/bns-codec",
  "version": "0.0.0",
  "description": "Codec to encode/decode bns transactions and state objects",
  "author": "Ethan Frey <ethanfrey@users.noreply.github.com>",
  "license": "AGPL-3.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/iov-one/web4/tree/master/packages/iov-crypto"
  },
  "scripts": {
    "lint": "tslint --project .",
    "format": "prettier --write **/*.ts",
    "test-node": "./jasmine-testrunner.js",
    "test-firefox": "karma start --single-run --browsers Firefox",
    "test-chrome": "karma start --single-run --browsers ChromeHeadless",
    "test-safari": "karma start --single-run --browsers Safari",
    "test": "yarn build && yarn test-node",
    "prebuild": "yarn lint && yarn format",
    "build": "tsc",
    "findProto": "find $GOPATH/src/github.com/confio/weave $GOPATH/src/github.com/iov-one/bcp-demo -name '*.proto' -not -path '*/vendor/*' -not -path '*/examples/*'",
    "packProto": "yarn run pbjs -t static-module -w commonjs -o src/codec.js",
    "defineProto":  "yarn run pbts src/codec.js -o src/codec.d.ts",
    "protoc": "yarn packProto `yarn run -s findProto` && yarn defineProto && yarn format"
  },
  "dependencies": {
    "@iov/crypto": "^0.0.0",
    "@iov/types": "^0.0.0",
    "@types/long": "^4.0.0",
    "@types/node": "^10.3.2",
    "protobufjs": "^6.8.6"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.8",
    "jasmine": "^3.1.0",
    "jasmine-console-reporter": "^3.0.2",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.2",
    "karma-safari-launcher": "^1.0.0",
    "karma-typescript": "^3.0.12",
    "tslint": "^5.10.0"
  }
}
